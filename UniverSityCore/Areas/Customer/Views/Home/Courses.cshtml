@model IEnumerable<UniverSity.Models.Courses>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="col-12 text-right p-5">

        <h4 class=" text-info">المواد الدراسية  </h4>
        <hr />

        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <h5 class="text-right ">@item.Name</h5>

                if (item.Description.Length > 150)
                {
                    <p class="text-right">@Html.Raw(item.Description.Substring(0, 150))   </p>

                }
                else
                {
                    
                    @Html.Raw(item.Description)
                }
                <hr />

            }
        }

        else
        {
            <p> لايوجد مواد دراسية </p>
        }

       



    </div>
