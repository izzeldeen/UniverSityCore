@model UniverSity.Models.OfficeHours

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Links.cshtml";
}






<br />

<br />
<br />



<h1 class="text-info text-right">تعديل مادة</h1>





<hr />
<div class="col-md-8 offset-4 text-right">



    <div class="col-md-8 ml-auto mr-5">
        <form asp-action="Edit" class="text-right">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-8">
                        <input asp-for="Day" class="form-control text-right" />
                    </div>
                    <div class="col-3">
                        <label asp-for="Day" class="control-label"></label>
                    </div>
                    <span asp-validation-for="Day" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-8">
                        <input asp-for="StartHours" class="form-control text-right" />
                    </div>
                    <div class="col-3">
                        <label asp-for="StartHours" class="control-label"></label>
                    </div>
                    <span asp-validation-for="StartHours" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-8">
                        <input asp-for="EndHour" class="form-control text-right" />
                    </div>
                    <div class="col-3">
                        <label asp-for="EndHour" class="control-label"></label>
                    </div>
                    <span asp-validation-for="EndHour" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-8">
                        <textarea asp-for="OfficeNum" class="form-control text-right"></textarea>
                    </div>
                    <div class="col-3">
                        <label asp-for="OfficeNum" class="form-label"></label>

                    </div>
                    <span asp-validation-for="OfficeNum" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-8">
                    <a asp-action="Index" class="btn btn-primary col-5" > الساعات المكتبية </a>
                    <input type="submit" value="تعديل" class="btn btn-success col-5" />

                </div>
            </div>
        </form>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
    <script>


            tinymce.init({
                selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'

            });


    </script>
}