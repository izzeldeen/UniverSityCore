@model UniverSity.Models.WebSiteDetails

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Links.cshtml";

}


<div class="col-12">


    <h4 class="text-right text-info m-5">بيانات الصفحة</h4>
    <hr />
    <div class="flex-row-reverse">
        <div class="row">


            <div class="col-md-6 offset-5">
                <form asp-action="Edit" class="col-12 text-right" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="row">

                            <div class="col-8 text-right">

                                <input type="file" name="files" id="uploadBox" multiple class="form-control text-right" />

                            </div>
                            <div class="col-3">
                                الصورة الشخصية

                            </div>


                            <span asp-validation-for="Url" class="text-danger"></span>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">


                            <div class="col-8 text-right">
                                <input asp-for="Name" class="form-control text-right" />
                            </div>
                            <div class="col-3">
                                <label asp-for="Name" class="control-label text-right"></label>
                            </div>


                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-8 text-right">
                                <input asp-for="Coulage" class="form-control text-right" />
                            </div>
                            <div class="col-3">
                                <label asp-for="Coulage" class="control-label text-right"></label>
                            </div>


                            <span asp-validation-for="Coulage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">


                            <div class="col-8 text-right">
                                <input asp-for="Position" class="form-control text-right" />
                            </div>
                            <div class="col-3">
                                <label asp-for="Position" class="control-label text-right"></label>
                            </div>


                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="row">


                            <div class="col-8 text-right">
                                <input asp-for="Email" class="form-control text-right" />
                            </div>
                            <div class="col-3">
                                <label asp-for="Email" class="control-label text-right"></label>
                            </div>


                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">


                            <div class="col-8 text-right">
                                <input asp-for="Address" class="form-control text-right" />
                            </div>
                            <div class="col-3">
                                <label asp-for="Address" class="control-label text-right"></label>
                            </div>


                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">


                            <div class="col-8 text-right">
                                <input asp-for="PhoneNumber" class="form-control text-right" />
                            </div>
                            <div class="col-3">
                                <label asp-for="PhoneNumber" class="control-label text-right"></label>
                            </div>


                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">


                            <div class="col-8 text-right">
                                <input asp-for="Fax" class="form-control text-right" />
                            </div>
                            <div class="col-3">
                                <label asp-for="Fax" class="control-label text-right"></label>
                            </div>


                            <span asp-validation-for="Fax" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">


                            <div class="col-8 text-right">
                                <input asp-for="FacebookUrl" class="form-control text-right" />
                            </div>
                            <div class="col-3">
                                <label asp-for="FacebookUrl" class="control-label text-right"></label>
                            </div>


                            <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">


                            <div class="col-8 text-right">
                                <input asp-for="TwitterUrl" class="form-control text-right" />
                            </div>
                            <div class="col-3">
                                <label asp-for="TwitterUrl" class="control-label text-right"></label>
                            </div>


                            <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-8 text-right">


                                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary m-0">العودة الصفحة الرئيسية</a>
                                <input type="submit" value="حفظ" class="btn btn-success col-5" />
                            </div>
                            <div class="col-3">

                            </div>


                        </div>

                    </div>
                </form>
            </div>
        </div>



    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
