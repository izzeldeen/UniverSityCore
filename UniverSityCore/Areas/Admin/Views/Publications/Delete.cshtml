@model UniverSity.Models.Publications
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_links.cshtml";
}


<br />

<br />
<br />



<h1 class="text-info text-right">حذف مادة</h1>





<hr />
<div class="col-md-8 offset-4 text-right">



    <div class="col-md-8 ml-auto mr-5">
        <form asp-action="Delete" class="text-right">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-8">
                        <input asp-for="Title" class="form-control text-right" readonly />
                    </div>
                    <div class="col-3">
                        <label asp-for="Title" class="control-label"></label>
                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-8">
                        <input asp-for="Author" class="form-control text-right" readonly />
                    </div>
                    <div class="col-3">
                        <label asp-for="Author" class="control-label"></label>
                    </div>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control text-right" readonly></textarea>
                    </div>
                    <div class="col-3">
                        <label asp-for="Description" class="control-label"></label>
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-8">
                    <a asp-action="Index" class="btn btn-primary col-5">قائمة المنشورات </a>
                    <input type="submit" value="حذف" class="btn btn-danger col-5" />

                </div>
            </div>
        </form>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

