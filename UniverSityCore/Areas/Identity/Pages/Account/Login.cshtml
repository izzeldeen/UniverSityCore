@page
@model LoginModel

@{
   
}

<h1 class="m-0 p-3">@ViewData["Title"]</h1>
<div class="row">

    
    
         <div class="col-md-4 offset-4">
          <section>
              <form id="account" method="post">
                  <h4 class="text-right"> تسجيل الدخول </h4>
                  <hr />
                  <div asp-validation-summary="All" class="text-danger"></div>
                  <div class="form-group text-right">
                      <label asp-for="Input.Email" class="text-right"></label>
                      <input asp-for="Input.Email" class="form-control text-right" />
                      <span asp-validation-for="Input.Email" class="text-danger"></span>
                  </div>
                  <div class="form-group text-right">
                      <label asp-for="Input.Password" class="text-right"></label>
                      <input asp-for="Input.Password" class="form-control text-right" />
                      <span asp-validation-for="Input.Password" class="text-danger"></span>
                  </div>
                  <div class="form-group disabled justify-content-end align-self-end">
                      <div class="checkbox text-right"  >
                          <label asp-for="Input.RememberMe">

                              هل تتذكرني
                              <input asp-for="Input.RememberMe" />
                          </label>
                      </div>
                  </div>
                  <div class="form-group">
                      <button type="submit" class="btn btn-primary">تسجيل الدخول </button>
                  </div>
                  <div class="form-group">


                  </div>
              </form>
          </section>
      </div>


        

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
